- pageTitle = 'Bukubrow &mdash; Options'

doctype html
html
	head
		meta(charset='utf-8')
		title!= pageTitle

	body: .wrapper.wrapper--page
		header: h1!= pageTitle

		main: form.js-form
			div
				label(for='theme') Theme:
				select(name='theme', id='theme')
					option(value='light') Light
					option(value='dark') Dark
			button(type='submit').btn Save

		footer.footer
			| Made with&nbsp;
			span.footer--heart &hearts;
			| &nbsp;by the open source community
